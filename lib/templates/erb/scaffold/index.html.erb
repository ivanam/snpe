<div class="page-header">
  <%%= link_to new_<%= singular_table_name %>_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo <%= human_name %>
  <%% end %>
  <h1>Listado de <%= plural_table_name %></h1>
</div>

<div class="table-responsive">
  <table id="tabla-<%= singular_table_name %>" class="table table-striped table-bordered table-hover" data-source = "<#= <%=plural_table_name%>_path(format: :json) #>" >
    <thead>
      <tr>
    <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
    <% end -%>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      $('#tabla-<%= singular_table_name %>').dataTable({
        "oLanguage": {"sUrl": "<#= asset_path('language.es.json') #>",},
        "bProcessing": true,
        "bServerSide": true,
        //"aoColumnDefs": [{ 'bSortable': false, 'aTargets': [ 0,1,2,3,4,5,6,7,8 ] }],
        "sAjaxSource": $('#tabla-<%= singular_table_name %>').data('source'),
        "sPaginationType": "bootstrap",
      });
    });
</script>