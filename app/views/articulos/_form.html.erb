<%= form_for(@articulo, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @articulo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @articulo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :codigo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :descripcion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cantidad_maxima_dias, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cantidad_maxima_dias, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :con_goce, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.check_box :con_goce, { class: 'form-control' }, "true", "false" %>      
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_articulo_id, "Tipo de Artículo", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :tipo_articulo_id, TipoArticulo.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">

      <%= f.submit :class => "btn btn-primary", :value => "Guardar" %>
      <%= link_to articulos_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Atrás
      <% end %>
    </div>
  </div>
<% end %>
