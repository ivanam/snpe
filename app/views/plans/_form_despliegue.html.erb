<%= form_for(@despliegue, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @despliegue.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @despliegue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table class="table table-striped table-bordered table-hover">
  <tr>
    <td> AÃ±o </td>
    <td> Materia </td>
    <td> Carga horaria </td>
    <td> Cant. Docentes</td>
  </tr>
  <tr>
    <td> <%= f.number_field :anio, :class => "form-control" %></td>
    <td> <%= f.collection_select(:materium_id, Materium.all, :id, :to_s, {:prompt => true},:style=>"width:100%") %> </td>
    <td> <%= f.number_field :carga_horaria, :class => "form-control" %> </td>
    <td> <%= f.number_field :cant_docentes, :class => "form-control" %> </td>
  </tr>
</table>

  <div class="form-group hidden">
    <%= f.label :plan_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:plan_id, Plan.all.order(:codigo), :id, :to_s, {:prompt => true},:style=>"width:100%") %>
    </div>
  </div>
  <center>
    <div>
      <%= f.submit :class => "btn btn-primary", :value => "Agregar Despliegue" %>
    </div>
  </center>

<% end %>
