<legend><h5>Altas</h5></legend>
<table class="table table-bordered table-striped table-compact">
  <thead>
    <tr>
      <th>Tipo doc.</th>
      <th>N° doc.</th>
      <th>Apellido y nombre</th>         
      <th>Ca</th>
      <th>Ci</th>
      <th>Cu</th>
      <th>Di</th>
      <th>Fecha alta</th>
      <th>Horas</th>
      <th>Sit. Rev</th>
      <th>Materia</th>
      <th>Oblig.</th>
      <th>Lugar de pago</th>
    </tr>
  </thead>
  <tbody>
    <% @lote_impresion.altas_bajas_horas.each do |h| %>
      <tr>
        <td><%= h.persona.tipo_documento.to_s %></td>
        <td><%= h.persona.nro_documento %></td>
        <td><%= h.persona.to_s %></td>
        <td><%= Plan.find(h.plan_id).codigo %></td>
        <td><%= h.ciclo_carrera %></td>
        <td><%= h.anio.to_s %></td>
        <td><%= h.division.to_s %></td>
        <td><%= Util.fecha_a_es(h.fecha_alta) %></td>
        <td><%= h.horas %></td>
        <td><%= h.situacion_revista %></td>
        <td><%= Materium.find(h.materia_id).codigo.to_s.rjust(AltasBajasHora::LONGITUD_CODIGO,'0') %></td>
        <td><%= h.oblig %></td>
        <td><%= h.oblig %></td>
      </tr>
    <% end %>
  </tbody>
</table>

