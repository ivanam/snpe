<div class="page-header">
  <%= link_to new_concurso_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Concurso
  <% end %>
  <h1>Listado de concursos</h1>
</div>

<div class="table-responsive">
  <table id="tabla-concurso" class="table table-striped table-bordered table-hover" data-source = "<%= concursos_path(format: :json) %>" >
    <thead>
      <tr>
            <th>Fecha concurso</th>
            <th>Fecha inicio</th>
            <th>Fecha fin</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>


<script type="text/javascript">
    $(document).ready(function($) {
      $('#tabla-concurso').dataTable({
        language : {"sUrl": "<%= asset_path('language.es.json') %>",},
        processing : true,
        serverSide : true,
        ajax : $('#tabla-concurso').data('source'),
        pagingType: "simple",
      });
    });
</script>