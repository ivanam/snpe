<%= form_for(@concurso, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @concurso.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @concurso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :fecha_concurso, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_concurso, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_inicio, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_inicio, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_fin, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_fin, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descripcion, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">

      <%= f.submit :class => "btn btn-primary", :value => "Guardar" %>
      <%= link_to concursos_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Atr√°s
      <% end %>
    </div>
  </div>
<% end %>
