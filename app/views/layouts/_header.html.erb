  <div class="container">
    <div class="row" style="margin-bottom: -10px;">
        <% if user_signed_in? then %>
          <% if session[:establecimiento] != nil then%>
            <%@e = Establecimiento.find(session[:establecimiento])%>                  
            <!-- SIDEBAR -->
            <div class="col-sm-1 col-md-2">
              <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                
                <div class="profile-userpic">                  
                  <% if Rails.application.assets.find_asset("establecimientos/#{@e.cue_anexo.to_s}.jpg").present? %>
                      <%= image_tag("establecimientos/"+@e.cue_anexo.to_s+".jpg", :class => "img-circle img-responsive") %>
                  <% else %>
                      <%= image_tag("establecimientos/escuela_perfil.png", :class => "img-circle img-responsive") %>
                  <% end %>
                </div>

                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                  <div class="profile-usertitle-job text-center">
                    Escuela Nº: <%= @e.codigo_jurisdiccional %> </br>
                    <%= @e.nombre.titleize %></br>
                    <%= @e.localidad.to_s.titleize %>
                  </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
              </div>
            </div>
            <!-- SIDEBAR END -->
          <% end %>          
        <% end %>
        <!--  -->
        <% if user_signed_in? then %>
          <div class="col-sm-11 col-md-10">
        <% else %>
          <div class="col-md-12">
        <% end %>
            <div class="col-md-12 logo">
                <p align="center">
                  <%=image_tag("logo.png", :class => "img-responsive")%>

                </p>
            </div>
            <%if (user_signed_in? && (!current_user.role? :UserJunta)) then %>
              <div class="title">
                <h1 align="center"> Módulo de Novedades </h1>
              </div>
            <%elsif (user_signed_in? && (current_user.role? :UserJunta))  %>
              <div class="title">
                <h1 align="center"> Inscripción al Concurso Docente </h1>
              </div>
            <%end%>

      </div>
    </div>

</div>