<% @e = Establecimiento.find(session[:establecimiento])%>            
<div class="page-header">
  <h3>Escuela NÂ° <%= @e.to_s %></h3>
</div>

<table id="tabla-altas_bajas_hora_notificadas" class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th>CUIT/CUIL</th>
      <th>Apellido y Nombres</th>
      <th>Sit. Rev</th> 
      <th>Cargo</th>                           
      <th>Turno</th>
      <th>Curso</th>
      <th>Div</th>
      <th>Fecha Alta</th>
      <th>Notificaciones</th>
		</tr>
	</thead>
	<tbody>
		<% @cargos_notificados.each do |cargo| %>
			<tr>
				<td><%= cargo.persona.cuil %></td>
        <td><%= cargo.persona.to_s %></td>
        <td><%= cargo.situacion_revista %></td>
        <td><%= Funcion.where(categoria: cargo.cargo).first.to_s %></td>
        <td><%= cargo.turno %></td>
        <td><%= cargo.anio %></td>
        <td><%= cargo.division %></td>
        <td><%= Util.fecha_a_es(cargo.fecha_alta) %></td>
        <% if (cargo.estado_actual == "Notificado") then %>
          <td><span class="label label-success"><%= cargo.estado_actual %></td>
        <% else %>
          <td><span class="label label-danger"><%= cargo.estado_actual %></td>
        <% end %>
      </tr>
    <% end %>
	</tbody>
</table>



