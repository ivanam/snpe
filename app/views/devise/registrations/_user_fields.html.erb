
<div class="form-group">
  <div class="col-md-2">
    <%= f.label :nombres, :class => "control-label" %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :nombres, :class => "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.label :apellidos, :class => "control-label" %>
  </div>
  <div class="col-sm-4">
    <%= f.text_field :apellidos, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
   <div class="col-md-2">
     <%= f.label :region, :class => "col-sm-2 control-label" %>
   </div>
   <div class="col-sm-4">
      <%= f.collection_select(:region, Region.all, :id, :nombre, {:prompt => true}, :class=> "form-control", :style=>"width:80%") %>
   </div>
</div>

<div class="form-group">
  <div class="col-md-2">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
  </div>
  <div class="col-sm-10">
    <%= f.email_field :email, :class => "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-2">
    <%= f.label :password, "Contraseña", :class => "col-sm-2 control-label" %>
  </div>
  <div class="col-md-4">
    <%= f.password_field :password, :class => "form-control" %>
  </div>
  <div class="col-md-2">
    <%= f.label :password_confirmation, "Confirmar contraseña", :class => "col-sm-2 control-label" %>
  </div>
  <div class="col-sm-4">
    <%= f.password_field :password_confirmation, :class => "form-control" %>
  </div>
</div>