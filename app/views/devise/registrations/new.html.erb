<div class="row">
  <div class="col-md-8">
    <img src="<%= asset_path '/assets/Bienvenida.jpg' %>" width="100%">
    <center>
      <%= link_to "http://www.chubut.edu.ar/preguntas/Instructivo_concurso_ingreso.pdf" , :class => "btn btn-large btn-danger glyphicon glyphicon-download" do %>
      Descargar INSTRUCTIVO
    <% end %>
  </center>
  </div>


  
      <div class="col-md-4 text-center form-signup">
        	<br/>
            <legend></a> Registrarse</legend>
            <% if resource.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>
                  <ul>
                  <% resource.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.number_field :documento,:placeholder =>"Número de Documento", :class => "form-control", :min => 1000000, :max => 99999999, id: "numero_doc" %>
            </div>
            <div class="form-group">
  			       <%= f.email_field :email, :placeholder => "Correo Electrónico", :class => "form-control" %>
            </div>
            <div class="form-group">
  			       <%= f.password_field :password, :placeholder => "Contraseña", :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, :placeholder => "Confirmar Contraseña", :class => "form-control" %>
            </div>
            
            <br/>            
            <div class="form-group">
              <%= f.submit "Registrarse", id: "guardar", :class => "btn btn-lg btn-primary btn-block" %>
              <h5>Recibirás un mail para confirmar tu cuenta. Una vez confirmado, podras ingresar al sistema con tu email y contraseña.</h5>
            </div>
            <div class="form-group">
                <p>Ya tenes una cuenta?</p>
                <%= link_to 'Iniciar Sesión', new_user_session_path , class: "btn btn-primary btn-lg btn-block btn-login" %>
            </div>
            <% end %>
        </div>
        

    </div>
