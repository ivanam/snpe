<style type="text/css">
.form-control { margin-bottom: 10px; }
.form-signup
{
    margin-top: 20px;
}

</style>
<%= flash[:recaptcha_error] %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 well well-sm text-center form-signup">
        	<br/>
            <legend></a> Registrarse</legend>
            <% if resource.errors.any? %>
                <div class="alert alert-danger alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

                  <ul>
                  <% resource.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <div class="row">
	            <div class="col-xs-6 col-md-6">
	  				<%= f.text_field :nombres, :placeholder => "Nombres", :class => "form-control", :autofocus => true %>
				</div>
				<div class="col-xs-6 col-md-6">
	  				<%= f.text_field :apellidos, :placeholder => "Apellidos", :class => "form-control" %>
				</div> 
            </div>
            <%= f.number_field :documento,:placeholder =>"Número de Documento", :class => "form-control", :min => 1000000, :max => 99999999, id: "numero_doc" %>
  			<%= f.email_field :email, :placeholder => "Correo Electrónico", :class => "form-control" %>
  			<%= f.password_field :password, :placeholder => "Contraseña", :class => "form-control" %>
  			<%= f.password_field :password_confirmation, :placeholder => "Confirmar Contraseña", :class => "form-control" %>
            <%= recaptcha_tags %>
            <br/>
            
            <%= f.submit "Registrarse", id: "guardar", :class => "btn btn-lg btn-primary btn-block" %>
            <% end %>
        </div>
    </div>
</div>



</script>