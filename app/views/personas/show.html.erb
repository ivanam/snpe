<div class="page-header">
  <h1>persona</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nombres y Apellidos:</dt>
  <dd><%= @persona.apeynom %></dd>

  <dt>Nro documento:</dt>
  <dd><%= @persona.nro_documento %></dd>

  <dt>CUIL/CUIT:</dt>
  <dd><%= @persona.cuil %></dd>

  <dt>Calle:</dt>
  <dd><%= @persona.calle %></dd>

  <dt>Nro calle:</dt>
  <dd><%= @persona.nro_calle %></dd>

  <dt>Piso:</dt>
  <dd><%= @persona.piso %></dd>

  <dt>Depto:</dt>
  <dd><%= @persona.depto %></dd>

  <dt>Estado civil:</dt>
  <dd><%= @persona.estado_civil %></dd>

  <dt>Sexo:</dt>
  <dd><%= @persona.sexo %></dd>

  <dt>Fecha nacimiento:</dt>
  <dd><%= Util.fecha_a_es(@persona.fecha_nacimiento) %></dd>

  <dt>Localidad:</dt>
  <dd><%= @persona.localidad %></dd>

  <dt>Telefono contacto:</dt>
  <dd><%= @persona.telefono_contacto %></dd>

  <dt>Email:</dt>
  <dd><%= @persona.email %></dd>
  <br/><br/>

  <% if (current_user.role? :escuela) || (current_user.role? :personal) || (current_user.role? :sadmin) || (current_user.role? :licencia) %>
  <%= link_to establecimiento_pof_path, :class => 'btn btn-primary' do%>
   <span class="glyphicon glyphicon-share-alt"></span>
   volver a la POF
   <% end %>
   <% end %>  
   
   <% if (current_user.role? :junta) || (current_user.role? :UserJunta) then %>
     <%=  link_to docenteInscripcion_path(@persona.id), :class => 'btn btn-primary' do%>
     <span class="glyphicon glyphicon-share-alt"></span>
     volver a la inscripción
     <% end %>
   <% end %>    
  
  <% if (current_user.role? :sadmin) then %>
    <br/><br/>
    <%= link_to personas_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Atrás
    <% end %>
    <%= link_to edit_persona_path(@persona), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
    <% end %>
    <%= link_to persona_path(@persona), method: :delete, data: { confirm: '¿Seguro desea eliminar?' }, :class => 'btn btn-danger' do%>
    <span class="glyphicon glyphicon-trash"></span>
    Eliminar
    <% end %>
  <% end %>   
</dl>
