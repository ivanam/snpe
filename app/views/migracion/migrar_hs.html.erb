
  <div class="page-header">
      <h1>Listado a informar</h1>
    </div>

  <div class="table-responsive">
  <table id="tabla" class="table table-striped table-bordered table-hover" >
    <thead>
      <tr>

            <th>Establecimiento</th>
            <th>DNI</th>
            <th>Nombre y Apellido</th>
            <th>Secuencia</th>
            <th>Sit. Revista</th>
            <th>Horas</th>
            <th>Plan</th>
            <th>Curso</th>
            <th>Division</th>
            <th>Turno</th>
            <th>Materia</th>
            <th>Fecha de Alta</th>
            <th>Fecha de Baja</th>
            <th>Estado</th>
      </tr>
    </thead>
    <tbody>

   <% @listaAux.each do |b| %>
   		<% persona = Persona.where(id: b.persona_id).first
   		establecimiento = Establecimiento.where(id: b.establecimiento_id).first
   		plan = Plan.where(id: b.plan_id).first
   		materia = Materium.where(id: b.materium_id).first
   	%>
   <tr>
		    <td><%= establecimiento.codigo_jurisdiccional %></td>
		    <td><%= persona.nro_documento %></td>
		    <td><%= persona.apeynom %></td>
		    <td><%= b.secuencia %></td>
		    <td><%= b.situacion_revista%></td>
		    <td><%= b.horas%></td>
		    <%if plan != nil %>
		    	<td><%= plan.descripcion%></td>
		    <%else%>
		    	<td></td>
		    <%end%>
		    <td><%= b.anio%></td>
		    <td><%= b.division%></td>
		    <td><%= b.turno%></td>
		    <td><%= materia.descripcion%></td>
		    <td><%= b.fecha_alta%></td>
		    <td><%= b.fecha_baja%></td>
		    <td><%= b.estado%></td>

    </tr>




   <%end%>