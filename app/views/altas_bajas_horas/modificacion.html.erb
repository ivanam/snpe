<script type="text/javascript">

	function editar(id){

			window.varId= id;

			$("#edi").val(id);
		

			 $.ajax({
                url: '/soft/snpe/altas_bajas_horas/mostrar_edicion2/'+id,  
                type: 'GET',
              })
