<%= form_for(@rubro, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @rubro.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @rubro.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pesona_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :pesona_id, :class => "form-control" %>
    </div>
  </div>
