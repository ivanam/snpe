    </div>
  </div>
  <div class="form-group">
    <%= f.label :rubro_titulo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rubro_titulo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rubro_concepto, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rubro_concepto, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rubro_asis_perf, :class => "col-sm-2 control-label" %>
