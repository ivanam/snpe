<% @inscripcion = @persona.inscripcions.first %>
<div class="page-header row">
  <div class="">
    <h1 class="text-center">Inscripción a Concurso
    <% if not @inscripcion.nil? %>
    	<div class="pull-right">
            <%= link_to docenteInscripcion_path(@inscripcion.persona.id, format: :pdf), :target => "_blank", :class => 'btn btn-lg btn-danger' do %>
                Imprimir PDF
          <% end %>
        </div>
    <% end %>        
    </h1>
  </div>
</div>
  <h2>Datos personales del docente</h2>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <tr>
        <th colspan="3">Nombre</th>
        <th>Tipo Documento</th>
        <th>Nro Documento</th>
      </tr>
      <tr>
        <td colspan="3"><%= @persona.apeynom %></td>
        <td><%= @persona.tipo_documento %></td>
        <td><%= @persona.nro_documento %></td>
      </tr>
      <tr>
        <th colspan="2">Telefono</th>
        <th colspan="3">Email</th>        
      </tr>
      <tr>
        <td colspan="2"><%= @persona.telefono_contacto %></td>
        <td colspan="3"><%= @persona.email %></td>
      </tr>
      <tr>
        <th>Localidad</th>
        <th>Calle</th>
        <th>Nro</th>
        <th>Piso</th>
        <th>Depto</th>
      </tr>
      <tr>
        <td><%= @persona.localidad %></td>
        <td><%= @persona.calle %></td>
        <td><%= @persona.nro_calle %></td>
        <td><%= @persona.piso %></td>
        <td><%= @persona.depto %></td>
      </tr>
    </tbody>
  </table>
  </br>
  <td>  
    <%= link_to edit_persona_path(@persona), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Editar Domicilio
    <% end %>
  </td>

<% if @persona.tiene_cargo_titular %>
  <h2>Cargos</h2>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Cargo</th>
          <th>Establecimiento</th>
          <th>Ambito</th>
        </tr>
      </thead>
      <tbody>
        <% @persona.rubros.each do |rubro| %>
          <% if rubro.titular %>
            <tr>
              <td> <%= rubro.juntafuncion.to_s %> </td>
              <td> <%= rubro.establecimiento.to_s %> </td>
              <td> <%= rubro.ambito.to_s %> </td>
            </tr>            
          <% end %>  
        <% end %>
      </tbody>
    </table>
<% else %>
  <p>No tiene cargos ocupados.</p>
<% end %>

<h2>Puntajes</h2>    
<h4> Para ver sus puntajes visite la pagina del 
      <a href="http://www.chubut.edu.ar/nuevachubut/2017/09/02/como-puedo-saber-si-estoy-en-el-listado-de-junta-de-inicial-y-primaria/" target="_blank">Ministerio de Educacion del Chubut</a>
</h4>

<h2>Inscripcion</h2>
<% if not @inscripcion.nil? %>
  <p>Fecha: <%= @inscripcion.fecha_incripcion %></p>
  <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
          <th>Cargo</th>
          <th>Region</th>
        </tr>
    </thead>
    <tbody>
      <% @inscripcion.cargo_inscrip_doc.each do |cargo_inscripcion| %>
        <tr>
          <td><%= cargo_inscripcion.juntafuncion %></td>
          <td><%= @persona.inscripcions.first.region %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
	<p>No hay inscripciones registradas.</p>
<% end %>
  
  <br/><br/><br/>
<!--   <%= link_to docenteInscripcion_path(id: @persona.id), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Atrás
  <% end %>&nbsp; -->

  <% if @inscripcion.nil? %>
    <%= link_to new_inscripcion_path(id: @persona.id), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
     Registrar nueva inscripcion
    <% end %>
  <% else %>
    <%= link_to edit_inscripcion_path(@inscripcion), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
     Editar inscripción
    <% end %>
  <% end %>
