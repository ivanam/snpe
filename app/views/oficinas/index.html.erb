<div class="page-header">
  <%= link_to new_oficina_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Oficina
  <% end %>
  <h1>Listado de oficinas</h1>
</div>

<div class="table-responsive">
  <table id="tabla-oficina" class="table table-striped table-bordered table-hover" data-source = "<#= oficinas_path(format: :json) #>" >
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      $('#tabla-oficina').dataTable({
        "oLanguage": {"sUrl": "<#= asset_path('language.es.json') #>",},
        "bProcessing": true,
        "bServerSide": true,
        //"aoColumnDefs": [{ 'bSortable': false, 'aTargets': [ 0,1,2,3,4,5,6,7,8 ] }],
        "sAjaxSource": $('#tabla-oficina').data('source'),
        "sPaginationType": "bootstrap",
      });
    });
</script>