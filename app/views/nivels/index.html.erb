<div class="page-header">
  <%= link_to new_nivel_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Nivel
  <% end %>
  <h1>Listado de niveles</h1>
</div>

<div class="table-responsive">
  <table id="tabla-nivel" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th class="text-center">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @nivels) do |nivel| %>
            <td><%= nivel.nombre %></td>
            <td class="text-center">
          <div class="btn-group">
            <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
              Acciones
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Ver', nivel %></li>
              <li><%= link_to 'Editar', edit_nivel_path(nivel) %></li>
              <li><%= link_to 'Eliminar', nivel, method: :delete, data: { confirm: 'Â¿Seguro desea eliminar?' } %></li>
              </li>
            </ul>
          </div>
        </td>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      var cantidad = $("table > tbody").find("> tr:first > td").length - 1;
      var pepe = $('#tabla-nivel').dataTable({
        "sPaginationType": "bootstrap",
        "aoColumnDefs": [
          { "bSearchable": false, "aTargets": [ cantidad ] }
        ],
        "oLanguage": {
              "sUrl": "language.es.json",
          },
        "aaSorting": [[ 0, "desc" ]],
      });
    });
</script>