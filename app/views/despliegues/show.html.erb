<div class="page-header">
  <h1>despliegue</h1>
</div>

<dl class="dl-horizontal">
  <dt>Año:</dt>
  <dd><%= @despliegue.anio %></dd>

  <dt>Plan:</dt>
  <dd><%= Plan.find(@despliegue.plan_id).to_s %></dd>

  <dt>Materia:</dt>
  <dd><%= Materium.find(@despliegue.materia_id).to_s %></dd>

  <dt>Carga horaria:</dt>
  <dd><%= @despliegue.carga_horaria %></dd>

  <br/><br/>
  <%= link_to despliegues_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Atrás
  <% end %>
  <%= link_to edit_despliegue_path(@despliegue), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <%= link_to despliegue_path(@despliegue), method: :delete, data: { confirm: '¿Seguro desea eliminar?' }, :class => 'btn btn-danger' do%>
    <span class="glyphicon glyphicon-trash"></span>
    Eliminar
  <% end %>
</dl>
