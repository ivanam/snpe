<%= form_for(@despliegue, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @despliegue.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4>No se pudo guardar el formulario, tiene los siguientes errores:</h4>

      <ul>
      <% @despliegue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :anio, "Año", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :anio, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :plan_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:plan_id, Plan.all, :id, :to_s, {:prompt => true},:style=>"width:100%") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :materia_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:materia_id, Materium.all, :id, :to_s, {:prompt => true},:style=>"width:100%") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :carga_horaria, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :carga_horaria, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">

      <%= f.submit :class => "btn btn-primary", :value => "Guardar" %>
      <%= link_to despliegues_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Atrás
      <% end %>
    </div>
  </div>
<% end %>
