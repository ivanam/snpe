<div class="page-header">
  <%= link_to new_situacion_revistum_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Situación de Revista
  <% end %>
  <h1>Listado de Situaciones de Revista</h1>
</div>

<div class="table-responsive">
  <table id="tabla-situacion_revistum" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th class="text-center col-md-1">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @situacion_revista) do |situacion_revistum| %>
            <td><%= situacion_revistum.codigo %></td>
            <td><%= situacion_revistum.descripcion %></td>
            <td class="text-center">
          <div class="btn-group">
            <a class="btn dropdown-toggle btn-primary" data-toggle="dropdown" href="#">
              Acciones
              <span class="caret"></span>
            </a>            
            <ul class="dropdown-menu">
              <li><%= link_to 'Ver', situacion_revistum %></li>
              <li><%= link_to 'Editar', edit_situacion_revistum_path(situacion_revistum) %></li>
              <li><%= link_to 'Eliminar', situacion_revistum, method: :delete, data: { confirm: '¿Seguro desea eliminar?' } %></li>
              </li>
            </ul>
          </div>
        </td>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function($) {
      $('#tabla-situacion_revistum').dataTable({
        language : {"sUrl": "<%= asset_path('language.es.json') %>",},
        processing : true,
        serverSide : true,
        ajax : $('#tabla-situacion_revistum').data('source'),
        pagingType: "simple",
      });
    });
</script>